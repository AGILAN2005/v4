# .env.example
# Copy this file to .env and fill in your actual values

# ==============================================
# GOOGLE SHEETS CONFIGURATION (FOR DEVELOPMENT)
# ==============================================

# Google Sheets Service Account Credentials File Path
# Download from Google Cloud Console -> APIs & Services -> Credentials
GOOGLE_SHEETS_CREDENTIALS_FILE=path/to/your/service-account-key.json

# Google Sheets Spreadsheet Name (will be created if doesn't exist)
GOOGLE_SHEETS_SPREADSHEET_NAME=Apollo_Hospital_Management_Dev

# Optional: Email to share the spreadsheet with (for easy access)
GOOGLE_SHEETS_SHARE_EMAIL=your-email@gmail.com

# ==============================================
# POSTGRESQL CONFIGURATION (FOR PRODUCTION)
# ==============================================
# Currently commented out - uncomment for production use

# HOSP_DB_NAME=hospital_db
# HOSP_DB_USER=postgres
# HOSP_DB_PASSWORD=your_password
# HOSP_DB_HOST=localhost
# HOSP_DB_PORT=5432
# DATABASE_URL=postgresql+psycopg2://postgres:your_password@localhost:5432/hospital_db

# ==============================================
# LIVEKIT CONFIGURATION
# ==============================================

# LiveKit Server Configuration
LIVEKIT_URL=wss://your-livekit-server.com
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret

# ==============================================
# GOOGLE AI CONFIGURATION
# ==============================================

# Google AI API Key for Gemini models
GOOGLE_API_KEY=your-google-ai-api-key

# ==============================================
# JWT CONFIGURATION
# ==============================================

JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ACCESS_EXPIRES_MIN=15
JWT_REFRESH_EXPIRES_DAYS=7

# ==============================================
# TWILIO CONFIGURATION (SMS NOTIFICATIONS)
# ==============================================

# Twilio Account Settings
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

# Application Server Settings
APP_HOST=0.0.0.0
APP_PORT=8000
RELOAD=true

# Timezone Configuration
TZ=Asia/Kolkata

# ==============================================
# REDIS CONFIGURATION (CURRENTLY COMMENTED OUT)
# ==============================================
# Uncomment for production use with caching

# REDIS_URL=redis://localhost:6379

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# Encryption key for sensitive data (optional)
# ENCRYPTION_KEY=your-32-character-encryption-key

# Rate limiting settings
MAX_BOOKING_ATTEMPTS=5
RATE_LIMIT_WINDOW=300

# ==============================================
# DEVELOPMENT/TESTING FLAGS
# ==============================================

# Set to true for development mode
DEBUG=true

# Set to true to use Google Sheets instead of PostgreSQL
USE_GOOGLE_SHEETS=true

# Set to false to disable Redis caching during development
USE_REDIS=false

# ==============================================
# OPTIONAL CONFIGURATIONS
# ==============================================

# Hospital Information (for display purposes)
HOSPITAL_NAME="Apollo Hospitals"
HOSPITAL_PHONE="+91-1066"
HOSPITAL_ADDRESS="Your Hospital Address"

# Email configuration (for future use)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Webhook URLs (for future integrations)
# WEBHOOK_APPOINTMENT_CREATED=https://your-webhook-url.com/appointment-created
# WEBHOOK_APPOINTMENT_CANCELLED=https://your-webhook-url.com/appointment-cancelled